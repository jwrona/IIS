{block content}

<h1 n:block="title">Hospitalizace</h1> 

{form searchHospitalizaceForm}
    <div>
        {control $form errors}

        <div>
            {label oddeleni /}
            <div class="input">{input oddeleni}</div>
        </div>
        <div>
            {label set /}
            <div class="submitt">{input set}</div>
        </div>
    {/form}


    {form viewAllButton}
        <div>
            {control $form errors}

            <div>
                {label set /}
                <div class="submitt">{input set}</div>
            </div>
        {/form}
        <br>
        <a n:href="Pacient:" class="icon edit">Přidat hospitalizaci</a>
        <br>
        <table>
            <thead>
                <tr>
                    <th>Rodné číslo</th>
                    <th>Přijat</th>
                    <th>Propuštěn</th>
                    <th>Oddělení</th>
                </tr>
            </thead>
            <tbody>
                {foreach $hospitalizace as $hosp}
                    <tr n:class="$iterator->isOdd() ? odd : even">
                        <td>{$hosp->rodneCislo}</td>
                        <td>{$hosp->datumPrijeti|date:'j. n. Y'}</td>
                        <td>{$hosp->datumPropusteni|date:'j. n. Y'}</td>
                        <td>{$hosp->zkratkaOdd}</td>
                        <td class="action"><a n:href="Hospitalizace:detail" class="icon edit">Podrobnosti</a></td>
                        <td class="action"><a n:href="Hospitalizace:" class="icon delete">Smazat</a></td>
                    </tr>
                {/foreach}
            </tbody>
        </table>
        {/block}